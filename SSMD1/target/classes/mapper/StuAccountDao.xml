<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.StuAccountDao">
	<resultMap type="dto.StuAccount" id="stuacctmap">
		<result column="user_id" property="userId"/>
		<result column="password" property="password"/>
		<association property="student" column="user_id" select="dao.StudentDao.getstuByid"></association>
	</resultMap>
	<select id="getStuAccount" resultMap="stuacctmap" parameterType="String">
		select * from account where person=#{person}
	</select>
</mapper>