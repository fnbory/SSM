<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dto.ScoreOfStuDao">
	<select id="getstuscore" resultMap="resultscoremap">
		select * from student where cls=#{cls}
	</select>
	<resultMap type="dto.ScoreOfStu" id="resultscoremap">
		<result property="userId" column="user_id"/>
		<result property="cls" column="cls"/>
		<result property="name" column="name"/>
		<association property="score"  column="user_id" select="dao.ScoreDao.getScore">
		</association>
	</resultMap>

</mapper>