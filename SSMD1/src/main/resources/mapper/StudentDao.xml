<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.StudentDao">
	<select id="getstuByid" resultType="Student">
		select * from student where user_id=#{userId}
	</select>
	<select id="getstus" resultType="Student">
		select * from student
	</select>
	<select id="getStusbycls" resultType="Student">
	 	select * from student where cls=#{cls};
	</select>
	<insert id="addstu" parameterType="Student">
		insert into student values (null,#{name},#{sex},#{age},#{phone},#{userId},#{cls})
	</insert>
	<delete id="delstu" parameterType="String">
		delete from student where name=#{name}
	</delete>
	<update id="updatestu"  parameterType="Student">
		update student set name=#{student.name} ,age=#{student.age},sex=#{student.sex},phone=#{student.phone},cls=#{student.cls} where user_id=#{student.userId}
	</update>
</mapper>