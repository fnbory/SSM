<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.AccountDao">
	<select id="getActByUid" resultType="Account">
		select * from account where user_id=#{userid}
	</select>
	<select id="getAccount" resultType="Account" parameterType="Account">
		select * from account where user_id=#{userId} and password=#{password};
	</select>
	<select id="getaccbypsn" resultType="Account" parameterType="String">
		select * from account where person=#{person}
	</select>
	<insert id="addAccount" parameterType="Account">
		insert into account values (null,#{account.userId},#{account.password},#{account.person},#{account.ismanager})
	</insert>
	<delete id="deleteAccount" parameterType="String">
		delete from account where user_id=#{userid}
	</delete>
	<update id="updateacct" parameterType="Account">
		update account set password=#{acct.password} where user_id=#{acct.userId}
	</update>
</mapper>